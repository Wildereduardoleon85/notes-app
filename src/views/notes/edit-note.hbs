<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Editar Nota</h3>
        </div>
        <div class="card-body">
            <form action="/notes/edit-note/{{note._id}}?_method=PUT" method="POST">
            <input type="hidden" name="_method" vlaue="PUT">
                <div class="form-group">
                    <input type="text" class="form-control" name="titulo" placeholder="Tiulo" value="{{note.titulo}}">
                </div>
                <div class="form-group mt-3">
                    <textarea name="descripcion" class="form-control">{{note.descripcion}}</textarea>
                </div>
                <div class="form-group mt-3">
                    <button class="btn btn-primary btn-block" type="submit">
                        Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>